<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#606060"
    tools:context="com.stick.mtglifecounter.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/down"
            android:textColor="#fff"
            android:textSize="35dp"
            android:background="@drawable/round_button"
            android:onClick="lifeDown"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/life_text_view"
            android:layout_width="200dp"
            android:textSize="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/up"
            android:textColor="#fff"
            android:textSize="35dp"
            android:background="@drawable/round_button"
            android:onClick="lifeUp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>/

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/down"
            android:textColor="#fff"
            android:textSize="30dp"
            android:background="@drawable/round_button"
            android:onClick="energyDown"/>
        <TextView
            android:id="@+id/energy_text_view"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="75dp"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/up"
            android:textColor="#fff"
            android:textSize="30dp"
            android:background="@drawable/round_button"
            android:onClick="energyUp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/mana_image"
        android:src="@drawable/black_symbol"/>
</LinearLayout>
